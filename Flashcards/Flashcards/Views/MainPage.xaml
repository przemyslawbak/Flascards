<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Flashcards"
             x:Class="Flashcards.MainPage" Title="Flashcards">
    <ContentPage.Content>
        <Grid>
            <!--grids-->
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--backgrounds-->
            <BoxView Color="#535353" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
            <BoxView Color="White" Grid.Column="0" Grid.Row="0" Grid.RowSpan="1" Grid.ColumnSpan="2" Margin="5,5,5,-5"/>
            <!--groups-->
            <!--TO BE UPDATED-->
            <ListView
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            ItemsSource="{Binding Groups}"
            x:Name="PhraseList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Button Text="{Binding}"
                                            Command="{Binding OpenPhraseGroupViewCommand}"
                                            CommandParameter="{Binding}">
                                    </Button>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--buttons bottom-->
            <Button Grid.Row="1" Grid.Column="0"
                    Text="Load from file"
                    HorizontalOptions="Center"
                    Margin="5,0,0,0"
                    Command="{Binding LoadFileCommand}">
            </Button>
            <Button Grid.Row="1" Grid.Column="1"
                    Text="Add single phrase"
                    HorizontalOptions="Center"
                    Margin="0,0,5,0"
                    Command="{Binding AddPhraseCommand}">
            </Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>
